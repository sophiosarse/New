<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MainController" prefWidth="400.0" prefHeight="300.0">
    <children>
        <VBox layoutX="125.0" layoutY="80.0" spacing="15.0" alignment="CENTER">
            <children>
                <Label text="Scene 1"/>
                <Button text="Switch to Yellow Scene" onAction="#goToYellow"/>
                <Button text="Switch to Red Scene" onAction="#goToRed"/>
                <Button text="Switch to Green Scene" onAction="#goToGreen"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
