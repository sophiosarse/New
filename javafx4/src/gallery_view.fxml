<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GalleryController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">

    <ImageView fx:id="imageView" fitWidth="400" fitHeight="250" preserveRatio="true"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" text="← წინა" onAction="#showPrevious"/>
        <Button fx:id="nextButton" text="შემდეგი →" onAction="#showNext"/>
    </HBox>
</VBox>
