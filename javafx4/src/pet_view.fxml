<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="PetController"
      style="-fx-padding: 20; -fx-font-size: 14;">

    <Label text="აირჩიე შენი შინაური ცხოველი:" />

    <RadioButton fx:id="catRadio" text="კატა" toggleGroup="$petGroup" />
    <RadioButton fx:id="dogRadio" text="ძაღლი" toggleGroup="$petGroup" />
    <RadioButton fx:id="bunnyRadio" text="კურდღელი" toggleGroup="$petGroup" />
    <RadioButton fx:id="birdRadio" text="ჩიტი" toggleGroup="$petGroup" />

    <TextField fx:id="nameField" promptText="მაგ: bunny" />

    <Button text="დადასტურება" onAction="#onConfirmClick" />

    <Label fx:id="resultLabel" />

</VBox>
