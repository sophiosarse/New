<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CircleController">
    <children>

        <Button layoutX="275.0" layoutY="14.0" mnemonicParsing="false" onAction="#up" text="Up">
            <font><Font size="20.0" /></font>
        </Button>
        <Button layoutX="14.0" layoutY="180.0" mnemonicParsing="false" onAction="#left" text="Left">
            <font><Font size="20.0" /></font>
        </Button>
        <Button layoutX="516.0" layoutY="180.0" mnemonicParsing="false" onAction="#right" text="Right">
            <font><Font size="20.0" /></font>
        </Button>
        <Button layoutX="263.0" layoutY="346.0" mnemonicParsing="false" onAction="#down" text="Down">
            <font><Font size="20.0" /></font>
        </Button>


        <Button layoutX="30.0" layoutY="40.0" mnemonicParsing="false" onAction="#upLeft" text="↖" />
        <Button layoutX="530.0" layoutY="40.0" mnemonicParsing="false" onAction="#upRight" text="↗" />
        <Button layoutX="30.0" layoutY="330.0" mnemonicParsing="false" onAction="#downLeft" text="↙" />
        <Button layoutX="530.0" layoutY="330.0" mnemonicParsing="false" onAction="#downRight" text="↘" />

        <Button layoutX="230.0" layoutY="300.0" mnemonicParsing="false" onAction="#makeRed" text="Red Color" />
        <Button layoutX="330.0" layoutY="300.0" mnemonicParsing="false" onAction="#nextColor" text="Next Color" />

        <Circle fx:id="myGameCircle" fill="DODGERBLUE" layoutX="301.0" layoutY="200.0" radius="30.0" stroke="BLACK" strokeType="INSIDE" />
    </children>
</AnchorPane>
